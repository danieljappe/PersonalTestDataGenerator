{
    "name": "danieljappe/personal-test-data-generator",
    "description": "A PHP API for generating fake personal data for testing purposes",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Jappe",
            "email": "your-email@example.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "PersonalTestDataGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PersonalTestDataGenerator\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage/",
        "cs-check": "phpcs --standard=PSR12 src/ tests/",
        "cs-fix": "phpcbf --standard=PSR12 src/ tests/"
    }
}